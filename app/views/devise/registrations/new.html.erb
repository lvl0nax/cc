
<%= form_for(resource, :validate => true, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div id="close" onclick="closeItemPopup()">X</div>

    <%= devise_error_messages! %>

  <div class="reg-inputs">
    <%= label_tag :user_email, "E-MAIL" %>
    <%= f.email_field :email, :size => 30, :class => "required email" %>
    <div class="for_clear"></div>


    <div><%= label_tag :user_password, :ПАРОЛЬ %>
    <%= f.password_field :password, :size => 30, :class => "required" %></div>
    <div class="for_clear"></div>
  

    <div><%= label_tag :user_password_confirmation, "ПАРОЛЬ ЕЩЕ РАЗ" %>
    <%= f.password_field :password_confirmation, :size => 30, :class => "required" %></div>
    <div class="for_clear"></div>

  </div>
  <div style="visibility: hidden;"><%= f.text_field :role, :value => "employee" %></div>
  <div class="submit"  ><%= f.submit "ЗАРЕГИСТРИРОВАТЬСЯ" %></div>
<% end %>
