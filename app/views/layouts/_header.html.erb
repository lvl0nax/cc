            (function($){
                $('#autorization').submit(function(e){
                    var $this = $(this);
                    e.preventDefault();
                    $.ajax({
                        data: $this.serialize(),
                        type: 'post',
                        url: $this.attr('action'),
                        dataType: 'json',
                        error: function(jqXHR, textStatus, errorThrown){
                            $(".error").html($.parseJSON(jqXHR.responseText).error);
                        }
                    }).done(function(result){
                                if(result) window.location = window.location;
                            });
                });
            })
                    (jQuery);
        </script>
