<div id="content">
    <h1 class="ava-title">Выбор аватара</h1>
    <%= javascript_include_tag 'jquery.Jcrop.min' %>
    <%= javascript_include_tag 'jquery.color' %>
    <%= javascript_include_tag 'jquery.uniform.min' %>
    <%= javascript_include_tag 'resume' %>
    <% unless @resume.nil? %>
        <% if @resume.photo.url(:large) %>
            <div class='fl'>
                <%= image_tag @resume.photo.url(:large), id: "cropbox"%>
            </div>
            <div class='fl' style='width: 181px; margin-left:10px; margin-bottom: 30px'>
                 <span class="av-redact-title2">Миниатюры фотографии</span>
         Выберите область на основной фотографии, которая будет отображаться в миниатюрах на сайте

            </div>
            <div style="overflow: hidden; width: 100px; height: 100px; margin: 0 10px;" class='fl'>                    
                <%= image_tag @resume.photo.url, id: "preview" %>
            </div>
            <div style="overflow: hidden; width: 54px; height: 46px;" class='fl'>
                <%= image_tag @resume.photo.url, id: "preview2" %>
            </div>
            <div class='clr'></div>
        <% else %>
            <br>        
            <img id="" src = "/assets/nophoto.jpg">  
        <% end %>
        <%= simple_form_for @resume do |f| %>

            <div id="resume">
                <div class="ava-sep"></div>
                <p class="ava-text" style='color:green'>
                    *Файл должен бить не больше 5Mb, формат jpg или jpeg.
                </p>
                <p>
                <%= f.input :photo, :label => "АВАТАР", :class=>"ava-btn"  %>
                </p>                
            </div>



          <% %w[x y w h].each do |attribute| %>
            <%= f.hidden_field "crop_#{attribute}" %>
          <% end %>
          <div class="actions">
            <%= f.submit "Сохранить", :class=>"ava-btn" %>
          </div>
        <% end %>
    <% end %>
</div>
