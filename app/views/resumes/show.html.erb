<div id="content">

  <div class="persinalInformation">
    <script type="text/javascript" src="js/jquery.jqtransform.js"></script>
    <script language="javascript">
        $(function(){
            $('.inputsOnPI, .fjqtrans, .catsItem, .pchecks').jqTransform();
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".pi").hover(function () {
                var thisIndex = $(this).index();
                if (thisIndex < 2) {
                    $(this).stop().animate({
                        "width":"100%"
                    },200);
                }  else if(thisIndex > 8){
                    $(this).prev().css({"borderWidth":"0"});
                    $(this).css({"borderWidth":"1px 0 1px 0"});
                    $(this).stop().animate({
                        "width":"100%"
                    },200);
                } else{
                    $(this).prev().css({"borderWidth":"0px"});
                    $(this).css({"borderWidth":"1px 0 1px 0"});
                    $(this).stop().animate({
                        "width":"100%"
                    },200);
                };
            }, function () {
                var thisIndex = $(this).index();
                if (thisIndex < 2) {
                    $(this).stop().animate({
                        "width":"610px"
                    },200);
                } else if(thisIndex > 8){
                    $(this).prev().css({"borderWidth":"0 0 1px 0"});
                    $(this).css({"borderWidth":"0px"});
                    $(this).stop().animate({
                        "width":"610px"
                    },200);

                } else {
                    $(this).prev().css({"borderWidth":"0px 0 1px 0"});
                    $(this).css({"borderWidth":"0px 0 1px 0"});
                    $(this).stop().animate({
                        "width":"610px"
                    },200);
                };
            });




            $(".persinalInformation .pi").each(function () {
                var a = $(this).outerHeight();
                var b = a/2 - 9;
                var b = b.toFixed();
                $(this).children("button").css({"top":b+"px"});

            });
        });
    </script>

