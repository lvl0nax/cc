            function google_maps5() {
              var x_coor = $('#x_coordinate').val(),
                  y_coor = $('#y_coordinate').val();
                  if(x_coor == undefined){
                    x_coor = 59.90802;
                    y_coor = 30.330505;
                  }
                // latlng = new google.maps.LatLng(x_coor, y_coor); // Координаты карты
                // settings = {
