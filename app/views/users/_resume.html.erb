<label>ФАМИЛИЯ</label><div class = "dv "><%= @resume.surname %></div>
	
	<label>ИМЯ</label><div class = "dv "><%= @resume.name %></div>
	
	<label>ПОЛ</label><div class = "dv "><%= @resume.gender %></div>
	
	<label>ДАТА РОЖДЕНИЯ</label><div class = "dv "><%= @resume.birthday %></div>
	
	<label>ГОРОД</label><div class = "dv "><%= @resume.home %></div>
	<!-- 
		<label>x</label><div class = "dv "><%= @resume.crop_x %></div>
		<label>y</label><div class = "dv "><%= @resume.crop_y %></div>
		<label>height</label><div class = "dv "><%= @resume.crop_h %></div>
		<label>width</label><div class = "dv "><%= @resume.crop_w %></div>
		<label></label><div class = "dv "><%= image_tag @resume.photo.url(:thumb) if @resume.photo?%></div>
