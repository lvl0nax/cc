<div id='content'>
	<% content_for :head do %>
		<div class="title"><h2>МОЙ КАЛЕНДАРЬ (<%= @user.active_events %>)</h2></div>
	<% end %>
	<%if current_user == @user %>
		<div id="celendar_content">
			<div class="month_info">
				<h1>
					КАЛЕНДАРЬ 
					<%= @user.resume.name + " " + @user.resume.surname if @user.resume %> 
					<%= @user.compinfo.name if @user.compinfo  %>
				</h1>
			</div>
			<script type="text/javascript">
				$(document).ready(function() {
		    		$(".title_wrap").toggle(function (event) {	
		    			event.preventDefault();
						$(this).parents(".month_title").next().slideUp();

					},function (event) {	
		    			event.preventDefault();
						$(this).parents(".month_title").next().slideDown();
					});
		    	});		    	
			</script>
			<%= render 'actions' %> 
		</div>
	<%end%>
</div>
<script type="text/javascript" language="javascript">

	$(".monthcont").click(function () {	

		google_maps111();
		google_maps222();
		google_maps333();
		/*google_maps444();
		google_maps555();*/		

		$('.pk_popup').css({'display':'none'});
		$(this).children(".pk_popup").fadeIn(600);
		var w = ($(this).children(".pk_popup").width())/2;
		$(this).children(".pk_popup").css({'margin-top':-w});
	});		

	$(".close_popup").click(function () {
		$(this).parent(".pk_popup").fadeOut(600);
	});

	$(document).ready(function(){
	   $('.pk_popup, .monthcont').click(function(event){
		   event.stopPropagation();
	   });

	}).click(function(){
		$('.pk_popup').fadeOut(200);
	});	
</script>