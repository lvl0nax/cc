<div id='content'>
	<%unless @message.nil?%>
		<div class='password_error'>
			<%= @message%>
		</div>
	<%end%>
	<div class="update-pass">
		<%= form_for @user, :url => update_password_path(@user.id, :token => @token), :html => { :method => :put, :id=>'user_form' } do |f| %>
		 
		  	<%= f.label "Новый пароль" %><br />
		  	<%= f.password_field :password, :autocomplete => "off" %>
		  	<div class="clr"></div>
		  	<%= f.label "Подтвердить пароль" %><br />
		  	<%= f.password_field :password_confirmation %>
		  	<div class="clr"></div>
		  	<%= f.submit "Обновить пароль", :id=>'update_password', :class => 'appas-sub' %>
		<% end %>
	</div>
</div>